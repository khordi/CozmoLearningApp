<AlgebraTutorial>:

    name: "algebratutorial"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'cozmo.png'

    GridLayout:
        spacing: 2
        padding: 2.5

        cols: 3

    #Expression and Variables Button
        Button:
            id: expression_button
            size_hint: None, None
            size: 200, 200
            font_size:30
            color: 1,0.5,0,1        
            text: "Expressions \n        and \n   Variables"
            on_release: 
                root.completed1()
                root.expression_variables()
                root.enableButtonComb()
    #Combining Like Terms Button
        Button:
            disabled: True
            id: combining_button
            size_hint: None, None
            size: 200, 200
            font_size:30
            color: 1,0.5,0,1  
            text: " Combining \n Like Terms"
            on_release:
                root.completed2() 
                root.combining_liketerms()
                root.enableButtonSub()
    #Substitution and Evaluating Button
        Button:
            disabled: True
            id: button_sub
            size_hint: None, None
            size: 200, 200
            font_size:30
            color: 1,0.5,0,1
            text: "Substitution \n        and \n   Evaluating"
            on_release:
                root.completed3()              
                root.sub_evaluate()
                root.enableButtonExp()
                
    #Evaluating Expression and Word Problems Button
        Button:
            id: expression_words_button
            disabled: True           
            size_hint: None, None
            size: 200, 200
            font_size:30
            color: 1,0.5,0,1
            text_size: self.size     
            halign: 'center'    
            text: "Evaluating \n Expressions \n and \n Word \n Problems"
            on_release:
                root.completed4() 
                root.expression_words()
                root.enableButtonAlge()
    #Algebraic Equations Button        
        Button:
            id: algebraic_button
            disabled: True
            size_hint: None, None
            size: 200, 200
            font_size:30
            color: 1,0.5,0,1     
            text: " Equivalent \n  Algebraic \n Equations"
            on_release: 
                root.algebraic_equations()
                root.completed5() 
    # ... Button        
        Button:
            disabled: True
            size_hint: None, None
            size: 200, 200   
            text: "Algebraic \n Equations"
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"
    # ... Button                
        Button:
            disabled: True
            size_hint: None, None
            size: 200, 200   
            text: "Algebraic \n Equations"
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"
    # ... Button                
        Button:
            disabled: True
            size_hint: None, None
            size: 200, 200   
            text: "Algebraic \n Equations"
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"

        
        GridLayout:
            cols: 1
            size_hint: None, None
            size: 200, 200  

            Button:
                size_hint: None, None
                size: 200, 100         
                text: "Back"
                bold: True
                text_size: 130,0
                font_size: 30
                on_release: 
                    app.root.current = "algebrawindow"
                    root.manager.transition.direction = "right"
                Image:
                    source: "./backarrow.png"
                    y: self.parent.y 
                    x: self.parent.center_x 



